<div class="profile-banner d-flex align-items-center" style="background-image: url(<%= image_path "profile-banner.jpg" %>);">
</div>
<div class="container text-center">
  <div class="row">
    <div class="col-sm-8 offset-sm-2 mt-5 profile-card">
      <div class="content-profile-page">
        <div class="profile-avatar">
          <% if current_user.avatar.file.nil? %>
          <%= image_tag "default_image.png", width: 150, height: 150, class: "rounded-circle-profile-page-avatar" %>
          <% else %>
          <%= cl_image_tag @user.avatar , width: 150, height: 150, crop: :fill, class: "rounded-circle-profile-page-avatar" %>
          <% end %>
        </div>
        <div class="profile-details-text mt-4">
          <h1><%= @user.first_name.capitalize! + " " + @user.last_name.capitalize! %></h1>
          <div class="line-below"></div>
          <h5><%= @user.email %></h5>
          <p>Membre depuis le <%= @user.created_at.strftime("%d / %m / %Y") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
