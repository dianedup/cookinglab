<div class="container">
  <div class="row">
    <div class="col-sm form-basics">
      <h2 class="mt-3 text-center">Cr√©er une nouvelle recette</h2>
      <%= simple_form_for @recipe do |f| %>
      <div class="form-row">
        <div class="col-sm-12 col-md-6">
          <%= f.input :title, label: 'Titre de votre recette'%>
        </div>
        <div class="col-sm-12 col-md-6">
          <%= f.input :photo %>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label check_boxes optional">Tags</label>
        <input type="hidden" name="post[tag_ids][]" value="">
        <div class="tag-choices">
          <% Tag.all.each do |tag| %>
          <div>
            <input type="checkbox" class="d-none" value="<%= tag.id %>" name="post[tag_ids][]" id="post_tag_ids_<%= tag.id %>">
            <label class="tag-choice" for="post_tag_ids_<%= tag.id %>">
              <%= tag.name %>
            </label>
          </div>
          <% end %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-sm-12">
          <%= f.input :description, as: :text %>
        </div>
      </div>
      <%= f.submit "Etape suivante", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
