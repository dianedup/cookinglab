<div class="container">
  <div class="row">
    <div class="col-sm form-basics">
      <h1 class="mt-3 text-center mb-5">Créer une nouvelle recette</h1>
      <%= simple_form_for [:owner, @recipe] do |f| %>
      <div class="form-row">
        <div class="col-sm-12 col-md-6">
          <%= f.input :title, label: 'Titre de votre recette'%>
        </div>
        <div class="col-sm-12 col-md-6">
          <%= f.input :photo%>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label check_boxes optional">Tags</label>
        <div class="tag-choices">
          <% Tag.all.each do |tag| %>
          <div>
            <input type="checkbox" class="d-none" value="<%= tag.id %>" name="recipe[tags][]" id="recipe_tag_<%= tag.id %>">
            <label class="tag-choice" for="recipe_tag_<%= tag.id %>">
              <%= tag.name %>
            </label>
          </div>
          <% end %>
        </div>
      </div>
      <div style="position: relative;">
        <i class="fas fa-quote-left" style="position: absolute; left: 20px; top: 23px"></i>
        <%= f.input :description, label: 'Ajouter un commentaire à votre recette'%>
        <i class="fas fa-quote-right" style="position: absolute; right: 20px; bottom: -8px;"></i>
      </div>
      <%= f.submit "Etape suivante", class: "btn btn-info mt-3" %>
      <% end %>
    </div>
  </div>
</div>
