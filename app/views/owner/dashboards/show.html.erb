<div class="container mt-3">
  <h1 class="text-center">Mes recettes</h1>
  <div class="dashboard-actions">
    <button class="btn btn-secondary mb-3">+<%= link_to ' Ajouter une recette', new_owner_recipe_path %></button>
  </div>
  <div class="row">
    <% @recipes.each do |recipe| %>
    <div class= "col-sm-12 col-md-6 col-lg-4">
      <div class="card-recipe-dashboard">
        <% if recipe.photo.url.nil? %>
        <div class="card-recipe-image text-center" style="background-image: url('<%= image_path "default_image.png" %>')">
          <% else %>
          <div class="card-recipe-image text-center" style="background-image: url('<%= cl_image_path recipe.photo %>')">
            <% end %>
            <div class="card-recipe-title">
              <h2><%= recipe.title %></h2>
            </div>
            <span>
              <% if recipe.kind == 'variant' %>
              <div class="variant-count">
                variante
              </div>
              <% else %>
              <div class="variant-orginal">
                originale
              </div>
              <% end %>
            </span>
          </div>
          <div class="container-subtitle">
            <% if recipe.kind == 'variant' %>
            <p class="pl-1"><%= recipe.subtitle %></p>
            <% end %>
          </div>
          <div class="d-flex justify-content-around">
            <div>
              <% if recipe.published == false %>
              <button class="btn btn-success p-0 pl-1 pr-1"><%= link_to 'Publier ', owner_recipe_publish_path(recipe), method: :patch %><i class="fas fa-rocket"></i></button>
              <% else %>
              <p clas="badge badge-primary">Publi√© <i class="fas fa-check"></i></p>
              <% end %>
            </div>
            <div>
              <%= link_to edit_owner_recipe_path(recipe), class: 'card-link' do %>
              <p class="text-center">Modifier <i class="fas fa-pen"></i></p>
              <% end %>
            </div>
          </div>
          <div class="card-recipe-options">
            <%= link_to recipe_path(recipe), class: 'card-link' do %>
            <p class="btn-line-behind"><span>voir la recette</span></p>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <h1 class="text-center m-10">Mes demandes de modification</h1>
    <% @changes_proposals.each do |cp| %>
    <div class="card-product mb-4">
      <img src="<%= cl_image_path cp.recipe.photo %>">
      <div class="card-product-infos">
        <h2><%= cp.recipe.title %></h2>
        <div class="w-75" >
          <p><i class="far fa-comment-alt"></i> <%= cp.message %></p>
        </div>
      </div>
      <div class="notification-actions-cp">
        <% if cp.status == 'pending' %>
        <%= link_to '#', method: :patch do %>
        <i class="far fa-check-circle accept"></i>
        <% end %>
        <%= link_to '#', method: :patch do %>
        <i class="far fa-times-circle deny"></i>
        <% end %>
        <% end %>
      </div>

    </div>
    <% end %>
  </div>
