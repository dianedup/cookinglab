function addDose(doseHTML) {
  const doses = document.getElementById('doses-edit-<%= @dose.step.id %>');
  doses.insertAdjacentHTML('beforeend', doseHTML);
}

function refreshForm(innerHTML) {
  const newDoseForm = document.getElementById('new-dose-<%= @dose.step.id %>');
  newDoseForm.outerHTML = innerHTML;
}

addDose('<%= j render "owner/doses/edit", dose: @dose %>');

refreshForm('<%= j render "owner/doses/create", step: @dose.step %>')

window.initSelect2();
