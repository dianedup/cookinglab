function addUtensil(utensilHTML) {
  const utensils = document.getElementById('step-utensils-index-<%= @step_utensil.step.id %>');
  utensils.insertAdjacentHTML('beforeend', utensilHTML);
}

function refreshForm(innerHTML) {
  const newUtensilForm = document.getElementById('new-step-utensil-<%= @step_utensil.step.id %>');
  newUtensilForm.innerHTML = innerHTML;
}

addUtensil('<%= j render "owner/step_utensils/edit", step_utensil: @step_utensil %>');

refreshForm('<%= j render "owner/step_utensils/create", step: @step_utensil.step %>')

window.initSelect2();
